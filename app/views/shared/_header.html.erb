<% if logged_in? %>
  <% notif_cnt = current_user.notifications_count %>
  <div class="tertiary">
    <a href="<%= feeds_path %>" id="logo">Fontli</a>
    <a href='<%= profile_path %>' class="grey-box profile" style="background: url('<%= current_user.url_thumb %>') no-repeat -5px 0px #2a2a2a;"></a>
    <div class='notifications-count-box' href='<%= my_updates_path %>'><%= notif_cnt %></div>
    <div class="grey-box up"></div>
    <div class="grey-box search">
      <input type="text" name="search" placeholder="search" />
    </div>
  </div>
<% else %>
  <div class="primary">
    <a href="/" id="logo">Fontli</a>
    <a href="<%= login_path(:default) %>" id="signup">Sign In</a>
    <span>discover, share, pure type love</span>
  </div>

  <div class="secondary">
    <div class="mobpic">
      <img src="/web-assets/images/phone.png">
      <img src="/web-assets/images/phone-top.png" class="phone-top">
    </div>
    <h1>Fontli is a social network for Type nerds. Capture typography around you and share it. Let the typetalk develop on Fontli. </h1>
    <div class="qrcode">
      <img src="/web-assets/images/capture.png">
    </div>
  </div>
<% end %>
