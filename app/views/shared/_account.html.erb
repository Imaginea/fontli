<% content_for :custom_js do %>
  photoIds = [];
<% end %>

<% fotos = u.photos.only(:id, :data_filename).limit(4).to_a %>
<div class="limelight-content">
  <a href="<%= profile_path(:user_id => u.id) %>" class="pro-img-big">
    <img src="<%= u.url_large %>">
    <div class="overlap-d"></div>
  </a>
  <div class="user-detail">
    <a href="<%= profile_path(:user_id => u.id) %>"><%= u.username %></a>
    <h1><%= u.full_name %></h1>
    <%= render_follow_button(u) %>
    <div class="clear"> </div>

    <ul>
      <% fotos.each do |f| %>
        <li rel='popitup' href='<%= show_feed_path %>' data-id='<%= f.id %>'>
          <a href="javascript:;">
            <img src="<%= f.url_thumb %>" width="71" height="71" />
          </a>
        </li>
      <% end %>
    </ul>
    <ul class="subtext">
      <li><a href="<%= profile_path(:user_id => u.id) %>"><%= pluralize(u.photos_count, 'Post') %></a></li>
      <li><a href="<%= profile_path(:user_id => u.id) %>"><%= pluralize(u.my_fonts_count, 'Spotting') %></a></li>
      <li><a href="<%= profile_path(:user_id => u.id) %>"><%= pluralize(u.followers_count, 'Follower') %></a></li>
    </ul>
  </div>
</div>
