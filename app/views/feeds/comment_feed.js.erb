// reset the comment form
var elem = $('#comment_form_<%= params[:id] %>').find('input[type=text]');
elem.val(elem.attr('data-label'));
elem.blur();

//remove any error messages
$('#comment_form_<%= params[:id] %>').find('div.errors').remove();

<% if @status %>
  // update the comments count
  $('.comments').html("<%= @photo.comments.count %>");
  // refresh the comments content
  $('.comments_block').html("<%= escape_javascript(render "comments_content", :foto => @photo) %>");
<% else %>
  $('#comment_form_<%= params[:id] %>').prepend("<%= escape_javascript(simple_errors_for @cmt) %>");
<% end %>
