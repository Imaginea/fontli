<% font = Font[n.extid] %>
<% taggd_usrs = font.recent_tagged_unames %>
<% taggd_cnt = font.tags_count - taggd_usrs.length %>
<li class="tag">
  <img class="ref-img" src='<%= font.photo.url(:thumb) %>' />
  <div class="text">
    <%= taggd_usrs.collect do |uname| %>
      <a class="author" href="profile:<%= uname %>"><%= uname %></a>
    <% end.join(', ').html_safe %> <%= "and #{pluralize(taggd_cnt, 'other')}" if taggd_cnt > 0 %> tagged <span class="content"><strong>"<%= font.family_name %>"</strong></span> on your post
  </div>
  <div class="timestamp"><%= timestamp(n.updated_at) %></div>
</li>
