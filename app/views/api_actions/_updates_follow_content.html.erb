<% follow = n.notifiable %>
<% frm_usr = follow.user %>
<li class="follow">
  <a class="ref-usr" style="float:right;background-image:url(<%= frm_usr.url_thumb %>);" href="http://openprofile/<%= frm_usr.id.to_s %>"></a>
  <div class="text">
    <a class="author" href="http://openprofile/<%= frm_usr.id.to_s %>"><%= frm_usr.username %></a>started following your feeds
  </div>
  <div class="timestamp"><%= timestamp(n.updated_at) %></div>
</li>
