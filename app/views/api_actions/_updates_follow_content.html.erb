<% follow = n.notifiable %>
<% frm_usr = follow.user %>
<li class="follow">
  <img class="ref-usr" src="<%= frm_usr.url_thumb %>" />
  <div class="text">
    <a class="author" href="profile:<%= frm_usr.id.to_s %>"><%= frm_usr.username %></a> started following your feeds
  </div>
  <div class="timestamp"><%= timestamp(n.updated_at) %></div>
</li>
