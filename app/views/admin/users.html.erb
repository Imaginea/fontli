<h3>Users <span class="badge badge-info"><%= @users_cnt %></span> </h3>

<form class="well form-search">
  <input type="text" name='search' value='<%= params[:search]%>' class="input-medium search-query">
  <button type="submit" class="btn">Search</button>
</form>

<table class='table table-striped table-condensed'>
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Avatar</th>
      <th>Username</th>
      <th>Full Name</th>
      <th>Email</th>
      <th>Photos</th>
      <th>Follows</th>
      <th>Fav fonts</th>
      <th>Points</th>
      <th>Created</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each_with_index do |u, i| %>
    <tr>
      <td><%= (@page - 1) * @lmt + i + 1 %></td>
      <td><img src='<%= u.url_thumb %>' /></td>
      <td><%= u.username %></td>
      <td><%= u.full_name %></td>
      <td><%= u.email %></td>
      <td><%= u.photos_count %></td>
      <td><%= u.follows_count %></td>
      <td><%= u.fav_fonts_count %></td>
      <td><%= u.points %></td>
      <td><%= u.created_dt %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<ul class='pager'>
  <li class='previous <%= 'disabled' if @page == 1 %>'>
    <a href='/admin/users?page=<%= @page - 1 %>'>&larr; Previous</a>
  </li>
  <li class='next <%= 'disabled' if @page == @max_page %>'>
    <a href='/admin/users?page=<%= @page + 1 %>'>Next &rarr;</a>
  </li>
</ul>
