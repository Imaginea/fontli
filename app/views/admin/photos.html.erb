<h3><%= @title || 'Photos' %> <span class="badge badge-info"><%= @fotos_cnt || @fotos.length %></span> </h3>

<form class="well form-search">
  <input type="hidden" name='req' value='<%= params[:req] %>' />
  <input type="text" name='search' value='<%= params[:search]%>' class="input-medium search-query">
  <button type="submit" class="btn">Search</button>
</form>

<%= render 'flash_notices' %>

<table class='table table-striped table-condensed'>
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>Image</th>
      <th>Caption</th>
      <th>Likes</th>
      <th>Comments</th>
      <th>Fonts</th>
      <th>Username</th>
      <th>Created</th>
      <%= '<th>Actions</th>'.html_safe if cta_req? %>
    </tr>
  </thead>
  <tbody>
    <% @fotos.each_with_index do |f, i| %>
    <tr>
      <td><%= (@page - 1) * @lmt + i + 1 %></td>
      <td><img src='<%= f.url_thumb %>' /></td>
      <td><%= f.caption %></td>
      <td><%= f.likes_count %></td>
      <td><%= f.comments_count %></td>
      <td><%= f.fonts_count %></td>
      <td><%= f.user.username %></td>
      <td><%= f.created_dt %></td>
      <% if @approve_sos %>
        <td><%= link_to('Approve SoS', '/admin/approve_sos?photo_id='+f.id.to_s) %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<% if params[:search].to_s.blank? %>
<ul class='pager'>
  <li class='previous <%= 'disabled' if @page == 1 %>'>
    <a href='/admin/users?page=<%= @page - 1 %>'>&larr; Previous</a>
  </li>
  <li class='next <%= 'disabled' if @page >= @max_page %>'>
    <a href='/admin/users?page=<%= @page + 1 %>'>Next &rarr;</a>
  </li>
</ul>
<% end %>
